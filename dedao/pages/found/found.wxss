/* pages/found/found.wxss */
.dedao-found-container{
  background: #f7f7f7;
  }
.found-header{
  position: relative;
  width: 100%;
  height: 375rpx;
}
.found__search{
  position: absolute;
  top: 18rpx;
  left: 32rpx;
  width: 688rpx;
  height: 68rpx;
  display: flex;
  justify-content: space-between;
}
.search__input{
  width: 612rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 5rpx 10rpx;
  font-size: 30rpx;
}
/* 下载图标垂直居中问题未解决  */
.found__search image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 9rpx;
  /* border: 1px solid black; */
}
.cloumn-nav{
  width: 100%;
  height: 164rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  margin-bottom: 20rpx;
}
.cloumn-item{
  text-align: center;
  box-sizing: border-box;
  width: 150rpx;
}
.cloumn-item image{
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
}
.cloumn-item text{
  display: block;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.found-native{
   height: 380rpx;
}

.cloumn{
  background: #fff;
  margin-top: 20rpx;
}
.cloumn-hd{
  height: 106rpx;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  padding: 34rpx 26rpx 20rpx 26rpx;
}
.cloumn-hd__name{
  font-size: 32rpx;
  font-weight: 1000;
  line-height: 52rpx;
  vertical-align: middle;
}
.native-hd__time{
  font-size: 28rpx;
  font-weight: 1000;
  color: #bdbdbd;
  line-height: 48rpx;
}
.native-intro__pic{
  background: url(https://placehold.it/150x200/000000/ffffff);
  /* background-position: 200px 25px;1  */
  width: 150rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-right: 32rpx;
}
.native-intro{
  margin: 0 26rpx;
  padding: 28rpx;
  display: flex;
  box-sizing: border-box;
  justify-content: flex-start;
  border-top: 1rpx solid #f7f7f7;
  }
.native-course{
  /* border: 1px solid red; */
  flex: 1;
  
}
.course-title{
  font-size: 30rpx;
  line-height: 40rpx;
  display: block;
}
.course-speaker{
  font-size: 24rpx;
  line-height: 40rpx;
  color: #7a7a7a;
  margin-bottom: 25rpx;
  display: block;
}
.update{
  font-size: 20rpx;
  color: #7a7a7a;
  line-height: 30rpx;
  display: block;
}
.update-course{
  font-size: 24rpx;
  color: #545454;
  line-height: 40rpx;
  display: block;
}
.free-hd__time{
  font-size: 30rpx;
  background: #ffa42f;
  color: #fff;
  width: 230rpx;
  height: 68rpx;
  border-radius: 34rpx;
  text-align: center;
  line-height: 68rpx;
}
.course-play{
  width: 40rpx;
  height: 40rpx;
  display: inline;
}
.course-play image{
  width: 100%;
  height: 100%;
}